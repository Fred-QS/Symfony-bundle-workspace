<div class="npb-headband npb-headband-{{ headbandType }}{% if headbandType == 'block' %} npb-headband-{{ headbandType }}-{{ blockType }}{% else %} npb-headband-interactive{% endif %}">
    <div class="npb-headband-header npb-headband-header-{{ headbandType }}">
        {%  set icons = ['drag', 'cog', 'duplicate', 'save', 'trash', 'dots'] %}
        {% for icon in icons %}
            <div class="npb-headband-header-icon-container npb-headband-header-icon-container-{{ icon }}{% if icon == 'cog' %} npb-headband-header-icon-container-draggable-modal{% endif %}" data-title="{{ icon }} {{ headbandType }}">
                {% include 'builder/components/icons/headband/' ~ icon ~ '.html.twig' %}
            </div>
        {% endfor %}
    </div>
    <input spellcheck="false" autocomplete="off" type="text" class="npb-headband-input npb-headband-input-{{ headbandType }}{% if headbandType != 'block' %} npb-headband-input-interactive{% endif %}" value="{% if headbandType != 'block' %}{{ headbandType|capitalize }}{% else %}{{ pattern|humanize_chars }}{% endif %}">
    {% if headbandType != 'block' %}
        <div class="npb-headband-header-expand npb-headband-header-expand-{{ headbandType }}" aria-expanded="true">
            {% include 'builder/components/icons/headband/chevron.html.twig' %}
        </div>
    {% endif %}
</div>