<div id="npb-resizable-modal-container">
    <div id="npb-resizable-modal">
        <div id="npb-resizable-modal-header">
            <div id="npb-resizable-modal-header-title" class="npb-resizable-modal-header-title-{{ info.elementType }}">
                <p>{% block title %}{% endblock %}</p>
            </div>
            <div id="npb-resizable-modal-header-icons" class="npb-resizable-modal-header-icons-{{ info.elementType }}">
                {% set icons = 'page' == info.elementType ? ['fullscreen', 'sidebar'] : ['fullscreen', 'sidebar', 'details'] %}
                {% for icon in icons %}
                    <div class="npb-resizable-modal-header-icon npb-resizable-modal-header-icon-{{ icon }}">
                        {% include 'builder/components/icons/resizable/' ~ icon ~ '.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div id="npb-resizable-modal-header-body">
            {% block content %}{% endblock %}
        </div>
        <div id="npb-resizable-modal-footer">
            {% set footer_icons = ['close', 'backward', 'forward', 'check'] %}
            {% for footer_icon in footer_icons %}
                <div class="npb-resizable-modal-footer-icon npb-resizable-modal-footer-icon-{{ footer_icon }}">
                    <span></span>
                    {% include 'builder/components/icons/resizable/' ~ footer_icon ~ '.html.twig' %}
                </div>
            {% endfor %}
        </div>
        <div id="npb-resizable-modal-resizer">
            {% include 'builder/components/icons/resizable/resize.html.twig' %}
        </div>
    </div>
</div>